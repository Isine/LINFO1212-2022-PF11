    <option value="name">Name</option>
    <option value="price">Price</option>
    <option value="date">Date</option>
  </select>

  <div class="catalogue">
    <img class="arrow" src="/private/images/FlÃªcheG.png" alt="">

    <% articleList.forEach(function(article){ %>
      <div class="items">
        <p class="Book_name">
          <%= article.title %>
        </p>
        <img src=<%=article.image %> alt="Syllabus-image" class="books">
        <div class="info">
          <h2 class="prix">
            <%= article.price %> â‚¬
